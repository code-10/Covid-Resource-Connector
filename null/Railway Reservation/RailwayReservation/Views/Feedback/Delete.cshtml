@model RailwayReservation.Feedback

@{
    ViewBag.Title = "Delete";
}



<h3 style = "color:white;">Are you sure you want to delete this Feedback?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal" style = "color:white;">
        <dt style = "color:orange;">
            Feedback Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.feedback_msg)
        </dd>

        <dt style = "color: orange;">
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.username)
        </dd>
        <dt style = "color:orange;">
            PNR Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ticket.pnr)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index","",new { @style="color:darkblue;font-size:20px" })
        </div>
    }
</div>
