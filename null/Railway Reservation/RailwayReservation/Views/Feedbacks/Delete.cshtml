@model RailwayReservation.Feedback

@{
    ViewBag.Title = "Delete";
}



<h3 style="color:white;">Are you sure you want to delete this Feedback?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal" style="color:white;">
        <dt>
            Feedback Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.feedback_msg)
        </dd>

        <dt>
            Admin Reply
        </dt>

        <dd>
            @Html.DisplayFor(model => model.admin_reply)
        </dd>

        <dt>
            PNR
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pnr)
        </dd>

        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", "", new { @style = "color:#000bbb;font-size:20px;" })
        </div>
    }
</div>
