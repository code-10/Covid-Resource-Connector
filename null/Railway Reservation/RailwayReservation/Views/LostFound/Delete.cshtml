@model RailwayReservation.LostFound

@{
    ViewBag.Title = "Delete";
}



<h3 style="color:white">Are you sure you want to delete this Item?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt style="color:orange">
           Item Type
        </dt>

        <dd style="color:white">
            @Html.DisplayFor(model => model.ItemType)
        </dd>

        <dt style="color:orange">
            Brand
        </dt>

        <dd style="color:white">
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt style="color:orange">
            Colour
        </dt>

        <dd style="color:white">
            @Html.DisplayFor(model => model.Colour)
        </dd>

       
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index","",new { @style = "color:#000bbb;font-size:20px" })
        </div>
    }
</div>
