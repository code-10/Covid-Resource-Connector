@model RailwayReservation.Service

@{
    ViewBag.Title = "Create";
}

<h2 style="color:white">Request For Service</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        <h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger",@style = "color:orange;font-size:25px;" })
        </h3>
    <div class="form-group">
        <label class="control-label col-md-2" style="color:white">PNR Number</label>
        <div class="col-md-10">
           @Html.EditorFor(model => model.pnr, new { htmlAttributes = new { @Value = ViewContext.RouteData.Values["id"], @Readonly="true", @class = "form-control" } })


            @Html.ValidationMessageFor(model => model.pnr, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Service1,"Service", htmlAttributes: new { @class = "control-label col-md-2" , @style = "color:white" })
            <div class="col-md-10">
                <select class="form-control" name="Service1">
                    <option>Select your Service</option>
                    <option>Laundry</option>
                    <option>Coach Cleaning</option>
                    <option>Bedsheet/Pillow Supply</option>
                </select>
                @Html.ValidationMessageFor(model => model.Service1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Remark,"Remark", htmlAttributes: new { @class = "control-label col-md-2" , @style = "color:white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" , @style = "color:orange;font-size:18px;" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Request" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Check Status", "Status","",new { @style = "color:#000bbb;font-size:20px;" })
</div>
