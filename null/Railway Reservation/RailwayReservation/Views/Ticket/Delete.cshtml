@model RailwayReservation.ticket

@{
    ViewBag.Title = "Delete";
}



<h3 style = "color:#ffffff;" >Are you sure you want to delete this ticket?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style = "color:orange;">
            PNR Number
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.pnr)
        </dd>
        <dt style = "color:orange;">
            Name
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt style = "color:orange;">
            Source
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.source)
        </dd>

        <dt style = "color: orange;">
            Destination
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.destination)
        </dd>

        <dt style = "color:orange;">
            Date
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.date).ToString().Substring(0, 10)
        </dd>

        <dt style = "color:orange;">
            Class
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.@class)
        </dd>

        <dt style = "color:orange;">
            Fare
        </dt>

        <dd style = "color:#ffffff;">
            &#8377 @Html.DisplayFor(model => model.fare)
        </dd>

        <dt style = "color:orange;">
            Username
        </dt>

        <dd style = "color:#ffffff;">
            @Html.DisplayFor(model => model.User.username)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", "", new { @style = "color:#000aaa; font-size:20px;" })
        </div>
    }
</div>
