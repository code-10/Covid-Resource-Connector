@model RailwayReservation.Train

@{
    ViewBag.Title = "Edit";
}

<h2 style = "color:white;" >Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.train_id)

    <div class="form-group">
        <label style = "color:white;" class="control-label col-md-2" >Source</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.source, new { value = Model.source,  htmlAttributes = new { @class = "form-control", @Readonly = "true", } })
            @Html.ValidationMessageFor(model => model.source, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="color:white;" class="control-label col-md-2">Destination</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.destination, new {value=Model.destination, htmlAttributes = new { @class = "form-control", @Readonly = "true", } })
            @Html.ValidationMessageFor(model => model.destination, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="color:white;" class="control-label col-md-2">Fare</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.fare, new {required="required", type="number", htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home", "Index","",new { @style = "color:#000aaa;font-size:20px" })
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
