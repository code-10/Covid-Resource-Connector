@model RailwayReservation.User

@{
    ViewBag.Title = "Delete";
}

<h2 style="color:white">Delete</h2>

<h3 style="color:white">Are you sure you want to delete this user?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt style = "color:#ffffff; font-size:15px;">
            Username
        </dt>

        <dd style="color:#ffffff; font-size:15px;">
            @User.Identity.Name 
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "SeeUsers", "", new { @style = "color:#000aaa; font-size:20px;" })
        </div>
    }
</div>
